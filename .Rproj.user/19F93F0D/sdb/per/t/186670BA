masa \\label{biom}}\n\n<<echo=FALSE>>=\nsp <- sp.plot(Bloques,Tratamientos,Genotipos,BIOM.PS)\nav <- aov(BIOM.PS ~ Bloques + Tratamientos*GENOTIPOS, dta)\nmc <- HSD.test(av,c(\"GENOTIPOS\"))\nrs <- list(\"Parametros\" = mc$statistics , \"Resumen\" = mc$means , \"Tukey\" = mc$groups)\n@\n\n\\subsection{Peso seco de Hojas} \\label{psh}\n\n<<echo=FALSE>>=\nsp <- sp.plot(Bloques,Tratamientos,Genotipos,HOJA.PS)\nav <- aov(HOJA.PS ~ Bloques + Tratamientos*GENOTIPOS, dta)\nmc <- HSD.test(av,c(\"GENOTIPOS\"))\nrs <- list(\"Parametros\" = mc$statistics , \"Resumen\" = mc$means , \"Tukey\" = mc$groups)\n@\n\n\\subsection{Peso Seco de Tallos}\\label{pst}\n\n<<echo=FALSE>>=\nsp <- sp.plot(Bloques,Tratamientos,Genotipos,TALLO.PS)\nav <- aov(TALLO.PS ~ Bloques + Tratamientos*GENOTIPOS, dta)\nmc <- HSD.test(av,c(\"GENOTIPOS\"))\nrs <- list(\"Parametros\" = mc$statistics , \"Resumen\" = mc$means , \"Tukey\" = mc$groups)\n@\n\n\\subsection{Peso Seco de Ra\\'iz \\label{psr}}\n\n<<echo=FALSE>>=\nsp <- sp.plot(Bloques,Tratamientos,Genotipos,RAIZ.PS)\nav <- aov(RAIZ.PS ~ Bloques + Tratamientos*GENOTIPOS, dta)\nmc <- HSD.test(av,c(\"GENOTIPOS\"))\nrs <- list(\"Parametros\" = mc$statistics , \"Resumen\" = mc$means , \"Tukey\" = mc$groups)\n@\n\n\\subsection{Peso Seco de Tub\\'erculo \\label{pstub}}\n\n<<echo=FALSE>>=\nsp <- sp.plot(Bloques,Tratamientos,Genotipos,TUB.PS)\nav <- aov(TUB.PS ~ Bloques + Tratamientos*GENOTIPOS, dta)\nmc <- HSD.test(av,c(\"GENOTIPOS\"))\nrs <- list(\"Parametros\" = mc$statistics , \"Resumen\" = mc$means , \"Tukey\" = mc$groups)\n@\n\n\\subsection{\\'Indice de cosecha \\label{HI}}\n\n<<echo=FALSE>>=\nsp <- sp.plot(Bloques,Tratamientos,Genotipos,IC)\nav <- aov(IC ~ Bloques + Tratamientos*GENOTIPOS, dta)\nmc <- HSD.test(av,c(\"GENOTIPOS\"))\nrs <- list(\"Parametros\" = mc$statistics , \"Resumen\" = mc$means , \"Tukey\" = mc$groups)\n@\n\n\\subsection{Tolerancia a la reducci\\'on de agua \\label{ATRA}}\n\n<<echo=FALSE>>=\nav <- aov(TRA ~ Bloques + GENOTIPOS , dta)\